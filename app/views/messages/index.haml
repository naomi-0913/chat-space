-# .flash-box グループ作ったよーん
.wrapper
 .chat-side
  .side-header
   .side-header__box
    %p.side-header__box__user-name NAOMI
    %ul.side-header__box__menu
     %li.side-header__box__menu__new-group
      =link_to "http://localhost:3000/" do
       %i.fa.fa-edit
     %li.side-header__box__menu__edit__user
      =link_to "http://localhost:3000/" do
       %i.fa.fa-cog
  .groups
   .group
    %p.group__group-name ハムハムTEAM
    %p.group__group-latest-message ハムハムっ
 .chat-main
  .main-header 
   .main-header__left-box
    .main-header__left-box__current-group ハムハムTEAM
    %ul.main-header__left-box__member-list 
     Member：
     %li.main-header__left-box__member-list__member 
      NAOMI
   =link_to "http://localhost:3000/" do
    .main-header__edit-btn Edit
  .messages
   .message
    .message__upper-info
     %p.message__upper-info__talker NAOMI
     %p.message__upper-info__date 2019/06
    %p.message__text ハムハムっ 
  .form
   = form_for "", html: {class: "new_message"} do |f| 
    .input-box
     = f.text_field :text, placeholder: "type a message", class: "input-box__text"
     %label(class="input-box__image" for="image_file")
      %i.fa.fa-image
       = f.file_field :image, id: "image_file", class: "input-box__image"
    = f.submit "Send", class: "submit-btn"



